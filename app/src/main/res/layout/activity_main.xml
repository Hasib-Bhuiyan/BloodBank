<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout tools:context="com.example.bloodbank.MainActivity"   android:layout_height="match_parent" android:layout_width="match_parent" android:id="@+id/activity_main" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/btn_need_blood" android:layout_centerHorizontal="true" android:layout_alignParentTop="true"  android:textSize="20sp" android:padding="20dp" android:layout_marginTop="38dp" android:text="@string/need_blood"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/btn_donor_profile" android:layout_centerHorizontal="true"  android:textSize="20sp" android:padding="20dp" android:layout_marginTop="18dp" android:text="@string/be_a_donor" android:layout_below="@+id/btn_need_blood"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/btn_info" android:layout_centerHorizontal="true"  android:textSize="20sp" android:padding="20dp" android:layout_marginTop="20dp" android:text="@string/informations" android:layout_below="@+id/btn_donor_profile"/>

</RelativeLayout>